@model NovaRegradaAposentadoria.Models.Calculadora
<div class="row">
    <div class="col-md-12 text-center">
        <h1>@Html.DisplayFor(model => model.Sexo)</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-8 col-md-offset-2 col-xs-12 col-sm-6 col-sm-offset-4">
        @using (Ajax.BeginForm("Calcular", "Home", null, new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "Retorno" }, new { @class = "form-horizontal", @id = "CalculadoraForm" }))
        {
            @Html.EditorFor(model => model.Sexo, new { htmlAttributes = new { @class = "hidden" } })
            <div class="form-group form-group-lg">
                <h4>@Html.LabelFor(model => model.Idade, new { @style = "padding-top: 15px;", @class = "col-md-6 control-label" })</h4>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Idade, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Informe sua idade" } })
                    @Html.ValidationMessageFor(model => model.Idade, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group form-group-lg">
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.TipoTempo, new SelectList(new List<object>
                    {
                        new { value = 0, text = "Tempo de contribuição" },
                        new { value = 1, text = "Idade que começou a trabalhar"}
                    }, "value", "text", 2), new { @class = "form-control input-lg" })

                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Tempo, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Informe o periodo de tempo" } })
                    @Html.ValidationMessageFor(model => model.Tempo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group form-group-lg">
                <div class="col-md-offset-5 col-md-7">
                    @Html.CheckBoxFor(model => model.Professor, null)
                    @Html.LabelFor(model => model.Professor)
                </div>
            </div>
            <div class="form-group form-group-lg">
                <div class="col-md-12 text-center">
                    <input class="btn btn-lg" type="submit" name="Calcular" value="Calcular" />
                </div>
            </div>
        }
    </div>
</div>